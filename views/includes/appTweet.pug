.app--tweet
    form(action='/', method='post')
        .circle--fluid
            .circle--fluid--cell.circle--fluid--primary.align-bottom.app--tweet--post
                .app--avatar(style=`background-image: url(${dataObj.profile.profile_image_url})`)
                    img(src='/static/images/m-spore.png')
                textarea#tweet-textarea.circle--textarea--input(placeholder="What's happening?", name='tweetEntry')
                strong#tweet-char.app--tweet--char 140
            .circle--fluid--cell.align-bottom
                button(type='submit')#tweet-button.button-primary Tweet